<div class="banner2" style="background-image: url(https://images.unsplash.com/photo-1511184150666-9bb7d41a88f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 my-3">
    <div class="card row justify-content-center" style="width: 35rem;">
      <div class="text-center">
<h1><%=current_user.email%> Bookings<h1>
​
<div>
  <%@bookings.each do |booking|%>
    <div>
      <div>
      <p><%=booking.prop.name%></p>
      </div>
​
      <div>
      <% booking.prop.photos.each do |photo|%>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill%>
      <%end%>
      </div>
​
      <div>
      <p><%=booking.prop.description%></p>
      </div>
      <div>
​
      <div>
        <p>Start: <%=booking.start_date%></p>
      </div>
      <div>
        <p>End: <%=booking.end_date%></p>
      </div>
      <div>
        <p>Price: £<%=booking.price%></p>
      </div>
      </div>
      <div>
        <%= link_to "View", booking_path(booking), :class => "btn btn-primary"%>
      </div>
​
    </div>
  <%end%>
</div>
</div>
</div>


