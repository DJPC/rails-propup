<div class="banner2" style="background-image: url(https://images.unsplash.com/photo-1511184150666-9bb7d41a88f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 my-3">
    <div class="card row justify-content-center" style="width: 35rem;">
      <div class="text-center">
<h1> All Props </h1>

<% @props.each do |prop| %>
  <h2><%= prop.name %></h2>
  <p><%= prop.description %></p>
  <p><%= prop.price %></p>
  <p><%= prop.availability %></p>
  <p><%= prop.location %></p>
  <p><%= prop.user.email %></p>
  <% prop.photos.each do |photo|%>
    <div>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill%>

    </div>
  <%end%>
  <div>
    <%= link_to "View", prop_path(prop), :class => "btn btn-primary"%>
  </div>


  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

<% end %>
</div>
</div>
