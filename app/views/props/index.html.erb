<div class="content d-flex">
  <div class="cards">
    <% @props.each do |prop| %>
      <div class="card" style="background-image: url(<%= cl_image_path prop.photos.first.key %>)">
        <%= link_to prop.name, prop_path(prop) %>
<!--           <p><%= prop.description %></p>
          <p><%= prop.price %></p>
          <p><%= prop.availability %></p>
          <p><%= prop.location %></p>
          <p><%= prop.user.email %></p> -->
      </div>
    <% end %>
  </div>
  <div
    id="map"
    style="height: 100vh;
    position: sticky;
    top: 0;
    width: 50%;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
